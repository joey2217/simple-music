{
  "name": "simple-music",
  "private": true,
  "version": "0.0.2",
  "main": "dist/main.js",
  "author": "joey",
  "description": "simple music app",
  "scripts": {
    "pack:win": "npm run pack --win",
    "pack:mac": "npm run pack --mac",
    "pack": "electron-builder build -c electron-builder.config.js",
    "prepack": "npm run build",
    "dev": "node scripts/dev.js",
    "dev:renderer": "vite src/renderer",
    "build": "node scripts/build.js",
    "prebuild": "npm run check",
    "check": "tsc --noEmit -p tsconfig.node.json && tsc --noEmit -p tsconfig.json",
    "test": "vitest",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dexie": "^3.2.3",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0",
    "howler": "^2.2.3",
    "mitt": "^3.0.0",
    "rc-slider": "^10.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1",
    "recoil": "^0.7.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/howler": "^2.2.7",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.3",
    "@types/react-dom": "^18.2.3",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-react-swc": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "electron": "^24.2.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.39.0",
    "eslint-config-react-app": "^7.0.1",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.4",
    "vitest": "^0.31.0"
  }
}
